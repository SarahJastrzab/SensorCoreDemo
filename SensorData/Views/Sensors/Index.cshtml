@model IEnumerable<SensorData.Models.Sensor>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SensorCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpectedMin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpectedMax)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SensorType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SensorCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SensorType.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
